<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="fw-bold mb-0">Meus Eventos</h2>
  <a href="/eventos/novo" class="btn btn-success btn-lg">+ Novo Evento</a>
</div>

<div class="table-responsive rounded-3 shadow-sm">
  <table class="table table-bordered table-hover align-middle mb-0">
    <thead class="table-dark text-center">
      <tr>
        <th scope="col">Título</th>
        <th scope="col">Data</th>
        <th scope="col">Local</th>
        <th scope="col">Vagas</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% eventos.forEach(evento => { %>
        <tr>
          <td><%= evento.titulo %></td>
          <td class="text-center"><%= evento.data %> <%= evento.hora %></td>
          <td><%= evento.local %></td>
          <td class="text-center"><%= evento.max_participantes %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Ações do Evento">
              <a href="/participantes/<%= evento.id %>" class="btn btn-sm btn-info">Participantes</a>
              <a href="/eventos/editar/<%= evento.id %>" class="btn btn-sm btn-warning">Editar</a>
              <a href="/eventos/deletar/<%= evento.id %>" class="btn btn-sm btn-danger">Excluir</a>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

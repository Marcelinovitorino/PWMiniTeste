<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="fw-bold mb-0">Participantes do Evento</h2>
  <div>
    <a href="/participantes/inscrever/<%= eventoId %>" class="btn btn-success btn-lg me-2">+ Inscrever Novo</a>
    <a href="/participantes/pdf/<%= eventoId %>" class="btn btn-outline-primary btn-lg" target="_blank">Exportar PDF</a>
  </div>
</div>

<div class="table-responsive rounded-3 shadow-sm">
  <table class="table table-striped table-bordered align-middle mb-0">
    <thead class="table-dark text-center">
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Telefone</th>
      </tr>
    </thead>
    <tbody>
      <% participantes.forEach(p => { %>
        <tr>
          <td><%= p.nome %></td>
          <td><%= p.email %></td>
          <td class="text-center"><%= p.telefone %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
